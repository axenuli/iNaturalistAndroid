<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="7dp">
    
    <TextView 
        android:id="@+id/title_bar_text1"
        android:text="@string/alert_title_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        style="@android:style/TextAppearance.DialogWindowTitle"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        />
    
    <TextView 
        android:id="@+id/title_bar_text2"
        android:text="\?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        style="@android:style/TextAppearance.DialogWindowTitle"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

    <ImageView 
        android:id="@+id/title_bar_logo"
        android:src="@drawable/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/title_bar_text1"
        android:layout_toLeftOf="@id/title_bar_text2"
        />

 
</RelativeLayout>